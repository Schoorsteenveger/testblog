<div class="container container-showpost">
  <div class="row">
    <div class="col-md-8">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Body:</strong>
        <%= @post.body %>
      </p>
      <hr>

      <%= render: partial: "comments/new_comment" %>
      <%= render: partial: "comments/comments" %>

      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %>
    </div>
  </div> 
</div>